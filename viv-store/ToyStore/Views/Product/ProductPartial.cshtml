@model SourceCode.Models.Product
<div class="new-top">
    <a href="@Url.Action("Details","Product",new { ID=Model.ID})"><img src="@Url.Content("~/Content/images/"+Model.Image1)" style="height:250px;width:300px" class="img-responsive" alt="item" /></a>
    <div class="new-text">
        <ul>
            <li><a href="/san-pham/@Model.SEOKeyword-@Model.ID">See more... </a></li>
            @*<li class="Add">@Ajax.ActionLink("Add list", "AddItemCart", "Cart", new { ID = Model.ID, @class = "item_add" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "DivCart", InsertionMode = InsertionMode.Replace }, new { @class="AddItemCart"})</li>*@
        </ul>
    </div>
</div>
<div class="new-bottom">
    <h5><a class="name" href="/san-pham/@Model.SEOKeyword-@Model.ID" style="width: 250px;display: inline-block;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">@Model.Name </a></h5>
    <div class="rating" style="float:right">
        @for (int i = 1; i <= ViewBag.Rating; i++)
        {
            if (i <= ViewBag.Rating)
            {
                <span class="on">☆</span>
            }
            else
            {
                <span>☆</span>
            }
        }
    </div>
    <div class="ofr">

            <p class="pric1"><h4>@Model.Price.ToString("#,##")₫</h4></p><br />

    </div>
</div>
