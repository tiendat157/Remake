
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<script>
    $(document).ready(function () {
        var password = document.getElementById("Password")
            , confirm_password = document.getElementById("confirm_password");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Re-enter password does not match!");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    });
</script>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Indes</a> <i class="fa fa-angle-right"></i></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","ProducerManage")">Change password</a> <i class="fa fa-angle-right"></i></li>
</ol>

<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            <h2>Đổi mật khẩu</h2>
            <p class="text-danger">@ViewBag.Message</p>
            @using (Html.BeginForm("ResetPassword", "Admin", FormMethod.Post))
            {
                <div class="form-group col-xs-4">
                    <input type="password" class="form-control" name="CurrentPassword" placeholder="Current password..." required>
                </div>
                <div class="form-group col-xs-4">
                    <input type="password" class="form-control" id="Password" name="NewPassword" placeholder="New password..." pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                </div>
                <div class="form-group col-xs-4">
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Re-enter new password..." pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                </div>
                <a class="btn btn-default" href="/Admin/InfoEmloyee">Cancel</a>
                <input type="submit" id="btnSave" class="btn btn-primary" value="Save">
            }
        </div>
    </div>
</div>
